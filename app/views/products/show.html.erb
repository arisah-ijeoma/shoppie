<div class="container">
  <div class="row details">
    <div class="col-md-6 col-lg-4">
      <%= image_tag @product.image.url, class: 'resize-for-show' %>
    </div>
    <div class="col-md-6 col-lg-8">
      <div class="product-details">
        <div class="product-name"><%= @product.name %></div>
        <div class="product-description"><%= @product.description %></div>
        <div class="product-price"><%= number_to_currency(@product.price, unit: 'Â£') %></div>
      </div>

      <%= link_to 'Add to Basket', add_to_basket_path(@product.category, @product),
          class: 'btn btn-primary btn-lg add-to-basket', remote: true %>
    </div>
  </div>
</div>
