<div class="container">
  <div class="products">
    <% products.each do |product| %>
      <%= link_to '#', class: 'product-link' do %>
        <div class="card h-100">
          <%= image_tag(product.image.url, class: 'card-img-top resize-for-home', alt: 'product image') %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.truncated_description %></p>
            <p><%= number_to_currency(product.price, unit: 'Â£') %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
